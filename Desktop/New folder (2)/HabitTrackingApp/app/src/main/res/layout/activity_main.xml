<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.saad.habittrackingapp.MainActivity">
    <TextView
        android:background="@drawable/d"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Habit Tracking App"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="28sp"
        android:elevation="@dimen/abc_action_bar_overflow_padding_start_material" />
    <LinearLayout
        android:layout_marginTop="70dp"
        android:orientation="vertical"
        android:background="@drawable/e"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="@dimen/abc_action_bar_stacked_max_height">
        <Button
            android:id="@+id/add_btn"
            android:background="@drawable/e"
            android:text="Add new habit"
            android:textStyle="italic"
            android:textSize="22dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/view_btn"
            android:background="@drawable/e"
            android:text="My Habits"
            android:textStyle="italic"
            android:textSize="22dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/delete_btn"
            android:background="@drawable/e"
            android:text="Delete a habit"
            android:textStyle="italic"
            android:textSize="22dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/help_btn"
            android:background="@drawable/e"
            android:text="Help"
            android:textStyle="italic"
            android:textSize="22dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>


</RelativeLayout>
